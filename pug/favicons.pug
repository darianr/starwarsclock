-
  var dir = '/img/favicons/';
  var appleFavs = [
    ['apple-touch-icon-180x180.png', '180x180'],
    ['apple-touch-icon-152x152.png', '152x152'],
    ['apple-touch-icon-144x144.png', '144x144'],
    ['apple-touch-icon-120x120.png', '120x120'],
    ['apple-touch-icon-114x114.png', '114x114'],
    ['apple-touch-icon-76x76.png', '76x76'],
    ['apple-touch-icon-72x72.png', '72x72'],
    ['apple-touch-icon-60x60.png', '60x60'],
    ['apple-touch-icon-57x57.png', '57x57']
  ];
  var favs = [
    ['android-chrome-192x192.png', '192x192'],
    ['favicon-96x96.png', '96x96'],
    ['favicon-32x32.png', '32x32'],
    ['favicon-16x16.png', '16x16']
  ];

each attr in appleFavs
  link(rel='apple-touch-icon', href=dir + attr[0], sizes=attr[1])
each attr in favs
  link(rel='icon', type='image/png', href=dir + attr[0], sizes=attr[1])

link(rel='manifest' href=dir + 'manifest.json')
link(rel='mask-icon' href=dir + 'safari-pinned-tab.svg' color='#5bbad5')
link(rel='shortcut icon' href=dir + 'favicon.ico')
meta(name='apple-mobile-web-app-title', content='Star Wars Clock')
meta(name='application-name', content='Star Wars Clock')
meta(name='msapplication-TileColor', content='#da532c')
meta(name='msapplication-TileImage', content=dir + 'mstile-144x144.png')
meta(name='msapplication-config', content=dir + 'browserconfig.xml')
meta(name='theme-color', content='#ffffff')
